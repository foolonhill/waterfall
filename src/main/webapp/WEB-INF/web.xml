    <!-- REST API Mapping -->
    <servlet>
        <servlet-name>restAppServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>restAppServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>


